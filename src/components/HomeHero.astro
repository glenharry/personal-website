---
import Button from "./buttons/Button.astro";
const { href, title, body, cta, img } = Astro.props;
---

<div class="container home-hero module">
  <div class="row">
    <div class="col col-12 col-md-6">
      <div class="content-wrapper">
        <h2>{title}</h2>
        <p class="subtitle">{body}</p>
        <Button href="/" title={cta} primary="primary" />
      </div>
    </div>
    <div class="col col-12 col-md-6">
      <img
        src="/assets/images/profile-pic-art.jpg"
        alt="My image"
        class="mt-5 mt-md-0"
      />
    </div>
  </div>
</div>

